    # Replace -ansi flag with -std=c99 flag
    H5_CFLAGS="`echo $H5_CFLAGS | sed -e 's/-ansi/-std=c99/g'`"

    # Disable warnings about using 'long long' type
    H5_CFLAGS="$H5_CFLAGS -Wno-long-long"

