HAVE_SIZEOF="no"
FORTRAN_DEFAULT_REALisDBLE="no"	

if test "X$HDF_FORTRAN" = "Xyes"; then
  echo "yes"

  HDF5_INTERFACES="$HDF5_INTERFACES fortran"

  dnl --------------------------------------------------------------------
  dnl HDF5 integer variables for the H5fortran_types.f90 file.
