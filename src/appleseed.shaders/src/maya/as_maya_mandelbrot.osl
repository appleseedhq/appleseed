        string page = "Mandelbrot Attributes",
        int divider = 1
    ]],
    float in_focus = 1.0
    [[
        string as_maya_attribute_name = "focus",
        string widget = "slider",
        float min = 0.0,
        float max = 10.0,
        string label = "Focus",
        string page = "Mandelbrot Attributes"
    ]],
    float in_shift = 0.0
    [[
        string as_maya_attribute_name = "shift",
        string widget = "slider",
        float softmin = 0.0,
