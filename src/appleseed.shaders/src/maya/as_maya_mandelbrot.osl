        float softmin = 0.0,
        float softmax = 2.0,
        string label = "Box Minimum Radius",
        string page = "Mandelbrot Attributes"
    ]],
    float in_boxRatio = -3.0
    [[
        string as_maya_attribute_name = "boxRatio",
        string widget = "slider",
        float min = -4.0,
        float max = -4.0,
