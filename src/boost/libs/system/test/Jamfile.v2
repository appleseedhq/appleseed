         ]
         [ run error_code_user_test.cpp
           :  :  : <link>static
         ]
         [ run error_code_user_test.cpp
           :  :  :  : error_code_user_test_dll
         ]
         [ run system_error_test.cpp
           :  :  : <link>static
         ]
         [ run system_error_test.cpp
            :  :  :  : system_error_test_dll
         ]
         [ run initialization_test.cpp
         ]
         [ run header_only_test.cpp
           :  :  : <link>static
         ]
        ;
