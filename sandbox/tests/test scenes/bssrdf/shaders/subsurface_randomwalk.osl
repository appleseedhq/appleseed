    diff =
        0.3 * as_subsurface("randomwalk", N, color(0.5, 0.0, 0.0), 0.10, 1.3) +
        0.2 * as_randomwalk_glass(N, color(0.5, 0.3, 0.05), 0.05, 1.3, 1.0) +
